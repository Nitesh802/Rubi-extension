# Backend Production Configuration
NODE_ENV=production
PORT=3000

# Moodle Integration
MOODLE_BASE_URL=URL_GOES_HERE
MOODLE_API_TOKEN=TOKEN_GOES_HERE
MOODLE_TIMEOUT=30000

# Identity and Auth
JWT_SECRET=TOKEN_GOES_HERE
IDENTITY_JWT_SECRET=TOKEN_GOES_HERE
EXTENSION_AUTH_TOKEN=TOKEN_GOES_HERE
SESSION_SECRET=TOKEN_GOES_HERE

# Provider Settings
OPENAI_API_KEY=TOKEN_GOES_HERE
ANTHROPIC_API_KEY=TOKEN_GOES_HERE
GOOGLE_API_KEY=TOKEN_GOES_HERE
DEFAULT_PROVIDER=openai
DEFAULT_MODEL=gpt-4o

# Feature Flags
ENABLE_IDENTITY_VALIDATION=true
ENABLE_ORG_CONFIG_CACHE=true
ENABLE_PROVIDER_FALLBACK=true
ENABLE_DEBUG_METADATA=false

# Cache Settings
REDIS_URL=redis://localhost:6379
CACHE_TTL_IDENTITY=3600
CACHE_TTL_ORG_CONFIG=7200
CACHE_TTL_ACTION_RESULTS=1800

# Security
CORS_ORIGIN=chrome-extension://*,moz-extension://*
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
LOG_LEVEL=info
SENTRY_DSN=URL_GOES_HERE
METRICS_ENABLED=true

# Fallback Settings
FALLBACK_ORG_ID=default
FALLBACK_MODE_ENABLED=true
OFFLINE_MODE_TIMEOUT=5000