{
  "name": "rubi-backend",
  "version": "1.0.0",
  "description": "Rubi Browser Extension Intelligence Backend",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec ts-node src/server.ts",
    "start:dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "rm -rf dist && tsc",
    "start": "node dist/prod-server.js",
    "start:staging": "NODE_ENV=staging node dist/prod-server.js",
    "start:production": "NODE_ENV=production node dist/prod-server.js",
    "test": "jest",
    "test:org-intel": "ts-node src/dev/testOrgIntelligence.ts",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "deploy:vercel": "npm run build && vercel --prod",
    "deploy:fly": "npm run build && flyctl deploy",
    "deploy:render": "echo 'Push to GitHub to trigger automatic Render deployment'",
    "deploy:do": "echo 'Use doctl app create --spec digitalocean.app.yaml to create app, then push to GitHub'",
    "prebuild": "rm -rf dist"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "openai": "^4.24.1",
    "@anthropic-ai/sdk": "^0.16.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "winston": "^3.11.0",
    "uuid": "^9.0.1",
    "js-yaml": "^4.1.0",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "handlebars": "^4.7.8",
    "compression": "^1.7.4",
    "ts-node-dev": "^2.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.5",
    "@types/uuid": "^9.0.7",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/compression": "^1.7.5",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1"
  }
}