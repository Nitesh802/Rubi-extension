{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LinkedIn Profile Analysis",
  "type": "object",
  "required": [
    "summary",
    "keyStrengths",
    "experience",
    "skills",
    "recommendations",
    "networkingTips",
    "profileCompleteness"
  ],
  "properties": {
    "summary": {
      "type": "string",
      "minLength": 10,
      "maxLength": 500
    },
    "keyStrengths": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "maxItems": 5
    },
    "experience": {
      "type": "object",
      "required": ["totalYears", "industries", "seniority"],
      "properties": {
        "totalYears": {
          "type": "number",
          "minimum": 0,
          "maximum": 60
        },
        "industries": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "currentRole": {
          "type": "string"
        },
        "seniority": {
          "type": "string",
          "enum": ["entry", "mid", "senior", "executive"]
        }
      }
    },
    "skills": {
      "type": "object",
      "required": ["technical", "soft"],
      "properties": {
        "technical": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "soft": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "certifications": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "recommendations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "suggestion", "priority"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["career", "networking", "skill"]
          },
          "suggestion": {
            "type": "string"
          },
          "priority": {
            "type": "string",
            "enum": ["high", "medium", "low"]
          }
        }
      }
    },
    "networkingTips": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "profileCompleteness": {
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "industryInsights": {
      "type": "string"
    }
  }
}