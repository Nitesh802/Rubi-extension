{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Dashboard Insights",
  "type": "object",
  "required": ["insights", "trends", "anomalies", "recommendations"],
  "properties": {
    "insights": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "title", "description", "impact"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["trend", "anomaly", "opportunity", "risk", "achievement"]
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "impact": {
            "type": "string",
            "enum": ["positive", "negative", "neutral"]
          },
          "metric": {
            "type": "string"
          },
          "value": {
            "type": ["string", "number"]
          }
        }
      }
    },
    "trends": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["metric", "direction", "percentage"],
        "properties": {
          "metric": {
            "type": "string"
          },
          "direction": {
            "type": "string",
            "enum": ["up", "down", "stable"]
          },
          "percentage": {
            "type": "number"
          },
          "period": {
            "type": "string"
          }
        }
      }
    },
    "anomalies": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["description", "severity"],
        "properties": {
          "description": {
            "type": "string"
          },
          "severity": {
            "type": "string",
            "enum": ["low", "medium", "high"]
          },
          "affectedMetric": {
            "type": "string"
          }
        }
      }
    },
    "recommendations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["action", "reason", "priority"],
        "properties": {
          "action": {
            "type": "string"
          },
          "reason": {
            "type": "string"
          },
          "priority": {
            "type": "string",
            "enum": ["high", "medium", "low"]
          },
          "expectedImpact": {
            "type": "string"
          }
        }
      }
    },
    "summary": {
      "type": "string"
    },
    "healthScore": {
      "type": "number",
      "minimum": 0,
      "maximum": 100
    }
  }
}