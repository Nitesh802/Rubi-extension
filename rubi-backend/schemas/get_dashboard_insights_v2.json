{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Dashboard Insights",
  "type": "object",
  "required": [
    "recommendedActions",
    "alerts",
    "insights",
    "notifications",
    "recentActivity"
  ],
  "additionalProperties": false,
  "properties": {
    "recommendedActions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["priority", "action", "reason", "impact", "effort", "deadline"],
        "additionalProperties": false,
        "properties": {
          "priority": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low"]
          },
          "action": {
            "type": "string",
            "minLength": 10,
            "maxLength": 300
          },
          "reason": {
            "type": "string",
            "minLength": 10,
            "maxLength": 300
          },
          "impact": {
            "type": "string",
            "minLength": 10,
            "maxLength": 300
          },
          "effort": {
            "type": "string",
            "enum": ["low", "medium", "high"]
          },
          "deadline": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
          },
          "owner": {
            "type": "string",
            "minLength": 0,
            "maxLength": 100
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1,
              "maxLength": 200
            }
          },
          "metrics": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1,
              "maxLength": 100
            }
          }
        }
      }
    },
    "alerts": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "required": ["severity", "type", "title", "description", "affectedMetrics", "suggestedAction", "timeframe"],
        "additionalProperties": false,
        "properties": {
          "severity": {
            "type": "string",
            "enum": ["critical", "warning", "info"]
          },
          "type": {
            "type": "string",
            "enum": ["risk", "opportunity", "anomaly", "trend", "threshold"]
          },
          "title": {
            "type": "string",
            "minLength": 5,
            "maxLength": 200
          },
          "description": {
            "type": "string",
            "minLength": 10,
            "maxLength": 500
          },
          "affectedMetrics": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1,
              "maxLength": 100
            }
          },
          "suggestedAction": {
            "type": "string",
            "minLength": 10,
            "maxLength": 300
          },
          "timeframe": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
          }
        }
      }
    },
    "insights": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["category", "insight", "supporting_data", "implications", "confidence", "actionable"],
        "additionalProperties": false,
        "properties": {
          "category": {
            "type": "string",
            "enum": ["performance", "trend", "comparison", "forecast", "anomaly"]
          },
          "insight": {
            "type": "string",
            "minLength": 10,
            "maxLength": 500
          },
          "supporting_data": {
            "type": "string",
            "minLength": 5,
            "maxLength": 300
          },
          "implications": {
            "type": "string",
            "minLength": 10,
            "maxLength": 500
          },
          "confidence": {
            "type": "string",
            "enum": ["high", "medium", "low"]
          },
          "actionable": {
            "type": "boolean"
          }
        }
      }
    },
    "notifications": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "required": ["type", "message", "importance", "actionRequired"],
        "additionalProperties": false,
        "properties": {
          "type": {
            "type": "string",
            "enum": ["achievement", "milestone", "deadline", "reminder", "update"]
          },
          "message": {
            "type": "string",
            "minLength": 10,
            "maxLength": 300
          },
          "importance": {
            "type": "string",
            "enum": ["high", "medium", "low"]
          },
          "actionRequired": {
            "type": "boolean"
          },
          "link": {
            "type": "string",
            "minLength": 0,
            "maxLength": 500
          }
        }
      }
    },
    "recentActivity": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "required": ["timestamp", "type", "description", "impact"],
        "additionalProperties": false,
        "properties": {
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "type": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
          },
          "description": {
            "type": "string",
            "minLength": 10,
            "maxLength": 300
          },
          "impact": {
            "type": "string",
            "minLength": 5,
            "maxLength": 300
          },
          "followUp": {
            "type": "string",
            "minLength": 0,
            "maxLength": 300
          }
        }
      }
    },
    "kpiSummary": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "topPerformers": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["metric", "value", "trend"],
            "additionalProperties": false,
            "properties": {
              "metric": {
                "type": "string",
                "minLength": 1,
                "maxLength": 100
              },
              "value": {
                "type": "string",
                "minLength": 1,
                "maxLength": 100
              },
              "change": {
                "type": "string",
                "minLength": 0,
                "maxLength": 50
              },
              "trend": {
                "type": "string",
                "enum": ["up", "down", "stable"]
              },
              "target": {
                "type": "string",
                "minLength": 0,
                "maxLength": 100
              }
            }
          }
        },
        "needsAttention": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["metric", "value", "trend", "action"],
            "additionalProperties": false,
            "properties": {
              "metric": {
                "type": "string",
                "minLength": 1,
                "maxLength": 100
              },
              "value": {
                "type": "string",
                "minLength": 1,
                "maxLength": 100
              },
              "gap": {
                "type": "string",
                "minLength": 0,
                "maxLength": 100
              },
              "trend": {
                "type": "string",
                "enum": ["up", "down", "stable"]
              },
              "action": {
                "type": "string",
                "minLength": 10,
                "maxLength": 300
              }
            }
          }
        },
        "opportunities": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["area", "potential", "effort", "recommendation"],
            "additionalProperties": false,
            "properties": {
              "area": {
                "type": "string",
                "minLength": 5,
                "maxLength": 200
              },
              "potential": {
                "type": "string",
                "minLength": 5,
                "maxLength": 200
              },
              "effort": {
                "type": "string",
                "minLength": 1,
                "maxLength": 100
              },
              "recommendation": {
                "type": "string",
                "minLength": 10,
                "maxLength": 300
              }
            }
          }
        }
      }
    },
    "trendAnalysis": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "positive": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 10,
            "maxLength": 300
          }
        },
        "negative": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 10,
            "maxLength": 300
          }
        },
        "emerging": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 10,
            "maxLength": 300
          }
        },
        "predictions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["metric", "forecast", "confidence", "timeframe", "assumptions"],
            "additionalProperties": false,
            "properties": {
              "metric": {
                "type": "string",
                "minLength": 1,
                "maxLength": 100
              },
              "forecast": {
                "type": "string",
                "minLength": 5,
                "maxLength": 300
              },
              "confidence": {
                "type": "integer",
                "minimum": 0,
                "maximum": 100
              },
              "timeframe": {
                "type": "string",
                "minLength": 1,
                "maxLength": 100
              },
              "assumptions": {
                "type": "array",
                "items": {
                  "type": "string",
                  "minLength": 5,
                  "maxLength": 200
                }
              }
            }
          }
        }
      }
    },
    "competitivePosition": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "strengths": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 10,
            "maxLength": 300
          }
        },
        "weaknesses": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 10,
            "maxLength": 300
          }
        },
        "opportunities": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 10,
            "maxLength": 300
          }
        },
        "threats": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 10,
            "maxLength": 300
          }
        }
      }
    },
    "focusAreas": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "today": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 10,
            "maxLength": 300
          }
        },
        "thisWeek": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 10,
            "maxLength": 300
          }
        },
        "thisMonth": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 10,
            "maxLength": 300
          }
        },
        "strategic": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 10,
            "maxLength": 300
          }
        }
      }
    },
    "automation": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "suggested": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["process", "benefit", "complexity", "recommendation"],
            "additionalProperties": false,
            "properties": {
              "process": {
                "type": "string",
                "minLength": 10,
                "maxLength": 300
              },
              "benefit": {
                "type": "string",
                "minLength": 10,
                "maxLength": 300
              },
              "complexity": {
                "type": "string",
                "enum": ["low", "medium", "high"]
              },
              "recommendation": {
                "type": "string",
                "minLength": 10,
                "maxLength": 500
              }
            }
          }
        }
      }
    }
  }
}