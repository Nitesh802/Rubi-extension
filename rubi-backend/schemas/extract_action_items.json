{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Action Items Extraction",
  "type": "object",
  "required": ["actionItems", "summary"],
  "properties": {
    "actionItems": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["task", "owner", "priority", "dueDate"],
        "properties": {
          "task": {
            "type": "string"
          },
          "owner": {
            "type": "string"
          },
          "priority": {
            "type": "string",
            "enum": ["urgent", "high", "medium", "low"]
          },
          "dueDate": {
            "type": ["string", "null"]
          },
          "category": {
            "type": "string"
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "status": {
            "type": "string",
            "enum": ["pending", "in-progress", "completed", "blocked"],
            "default": "pending"
          }
        }
      }
    },
    "summary": {
      "type": "string"
    },
    "meetingTopics": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "decisions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "decision": {
            "type": "string"
          },
          "rationale": {
            "type": "string"
          },
          "stakeholders": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "followUps": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "nextMeeting": {
      "type": "object",
      "properties": {
        "suggested": {
          "type": "boolean"
        },
        "topics": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "participants": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}